OPENAI_API_KEY=sk-...
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-5-mini
APP_HOST=127.0.0.1
APP_PORT=8000
WORKSPACE_DIR=workspace
DATABASE_URL=sqlite:///workspace/agent.db

# Optional: Langfuse tracing (set to enable)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com
# Set to 0 to disable tracing entirely
TRACING_ENABLED=1

# --- OpenRouter (optional) ---
# If you want to route via OpenRouter, set:
# OPENAI_BASE_URL=https://openrouter.ai/api/v1
# and use your OpenRouter key (either var works):
# OPENAI_API_KEY=sk-or-v1-...
# OPENROUTER_API_KEY=sk-or-v1-...
# Optional but recommended per OpenRouter docs:
# OPENROUTER_SITE_URL=https://your-app.example.com
# OPENROUTER_APP_NAME=SQL Agent
